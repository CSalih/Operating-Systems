CC = gcc
LD = gcc

CFLAGS = -std=gnu11 -Wall
LDFLAGS= -pthread


.PHONY: all task1 BEST_FIT_LOCAL BEST_FIT_GLOBAL FREE_LIST_LOCAL FREE_LIST_GLOBAL clean

all: task1 BEST_FIT_LOCAL BEST_FIT_GLOBAL FREE_LIST_LOCAL FREE_LIST_GLOBAL


clean:
	$(RM) task1 BEST_FIT_LOCAL BEST_FIT_GLOBAL FREE_LIST_LOCAL FREE_LIST_GLOBAL

task1: task1.c
	$(CC) $(CFLAGS) $(LDFLAGS)  -o $@ $<
BEST_FIT_LOCAL: task2.c
	$(CC) -DBEST_FIT_LOCAL $(CFLAGS) $(LDFLAGS)  -o $@ $<
BEST_FIT_GLOBAL: task2.c
	$(CC) -DBEST_FIT_GLOBAL $(CFLAGS) $(LDFLAGS)  -o $@ $<
FREE_LIST_LOCAL: task2.c
	$(CC) -DFREE_LIST_LOCAL $(CFLAGS) $(LDFLAGS)  -o $@ $<
FREE_LIST_GLOBAL: task2.c
	$(CC) -DFREE_LIST_GLOBAL $(CFLAGS) $(LDFLAGS) -o $@ $<